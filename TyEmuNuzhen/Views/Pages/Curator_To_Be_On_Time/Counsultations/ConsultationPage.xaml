<Page x:Class="TyEmuNuzhen.Views.Pages.Curator_To_Be_On_Time.Counsultations.ConsultationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:local="clr-namespace:TyEmuNuzhen.Views.Pages.Curator_To_Be_On_Time.Counsultations"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Консультации">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок и кнопки управления -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Консультации" 
                     FontSize="24" 
                     FontWeight="Bold"
                     VerticalAlignment="Center"/>
            <Button x:Name="btnAddConsultation"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Margin="20,0,0,0"
                    Content="Добавить консультацию"
                    materialDesign:ButtonAssist.CornerRadius="5"/>
        </StackPanel>

        <!-- Основная область с данными -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Список консультаций -->
            <ListView x:Name="lvConsultations" 
                      Grid.Column="0"
                      Margin="0,0,10,0">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="#FFCF5FD3" 
                                BorderThickness="1" 
                                CornerRadius="5" 
                                Margin="0,5" 
                                Padding="10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" 
                                           Grid.Column="0"
                                           Text="{Binding Date}"
                                           FontSize="16"
                                           FontWeight="Bold"/>
                                
                                <TextBlock Grid.Row="1" 
                                           Grid.Column="0"
                                           Text="{Binding Topic}"
                                           Margin="0,5,0,0"/>
                                
                                <TextBlock Grid.Row="2" 
                                           Grid.Column="0"
                                           Text="{Binding Description}"
                                           TextWrapping="Wrap"
                                           Margin="0,5,0,0"/>

                                <StackPanel Grid.Row="0" 
                                            Grid.Column="1"
                                            Grid.RowSpan="3"
                                            Orientation="Horizontal"
                                            HorizontalAlignment="Right">
                                    <Button Style="{StaticResource MaterialDesignFlatButton}"
                                            Content="Редактировать"
                                            Margin="0,0,5,0"/>
                                    <Button Style="{StaticResource MaterialDesignFlatButton}"
                                            Content="Удалить"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <!-- Фильтры -->
            <StackPanel Grid.Column="1" 
                        Width="250"
                        Margin="10,0,0,0">
                <GroupBox Header="Фильтры" 
                         Style="{StaticResource MaterialDesignGroupBox}">
                    <StackPanel>
                        <DatePicker x:Name="dpDateFrom"
                                   materialDesign:HintAssist.Hint="Дата от"
                                   Margin="0,0,0,10"/>
                        
                        <DatePicker x:Name="dpDateTo"
                                   materialDesign:HintAssist.Hint="Дата до"
                                   Margin="0,0,0,10"/>
                        
                        <ComboBox x:Name="cbStatus"
                                 materialDesign:HintAssist.Hint="Статус"
                                 Margin="0,0,0,10">
                            <ComboBoxItem Content="Все"/>
                            <ComboBoxItem Content="Запланирована"/>
                            <ComboBoxItem Content="Проведена"/>
                            <ComboBoxItem Content="Отменена"/>
                        </ComboBox>

                        <Button Style="{StaticResource MaterialDesignFlatButton}"
                                Content="Применить фильтры"
                                HorizontalAlignment="Stretch"/>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </Grid>

        <!-- Пагинация -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center"
                    Margin="0,10,0,0">
            <Button Style="{StaticResource MaterialDesignFlatButton}"
                    Content="Предыдущая"/>
            <TextBlock Text="1 из 10" 
                       Margin="10,0"
                       VerticalAlignment="Center"/>
            <Button Style="{StaticResource MaterialDesignFlatButton}"
                    Content="Следующая"/>
        </StackPanel>
    </Grid>
</Page>
