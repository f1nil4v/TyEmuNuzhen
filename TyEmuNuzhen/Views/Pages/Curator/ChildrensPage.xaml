<Page x:Class="TyEmuNuzhen.Views.Pages.Curator.ChildrensPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TyEmuNuzhen.Views.Pages.Curator"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ChildrensPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" BorderBrush="#FFCF5FD3" BorderThickness="0,0,0,1" Margin="20,0,20,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,10,0,10">
                <!-- Пункт "Мониторинг" -->
                <TextBlock x:Name="MonitoringTab" Text="Мониторинг" FontSize="16" 
                           Foreground="#A101A6" Margin="0,0,10,0" 
                           Cursor="Hand"/>

                <!-- Пункт "Дети в программе" -->
                <TextBlock x:Name="ChildrenInProgramTab" Text="Дети в программе" FontSize="16" 
                           Foreground="#808080" Margin="10,0,10,0"
                           Cursor="Hand"/>
                
                <!-- Пункт "Работа завершена" -->
                <TextBlock x:Name="ChildrenInWorkTab" Text="Работа завершена" FontSize="16" 
                           Foreground="#808080" Margin="10,0,10,0"
                           Cursor="Hand"/>

                <!-- Пункт "Не попали в программу" -->
                <TextBlock x:Name="ChildrenInWorkвTab" Text="Не попали в программу" FontSize="16" 
                       Foreground="#808080" Margin="10,0,10,0"
                       Cursor="Hand"/>
            </StackPanel>
        </Border>

        <!-- Контент страницы -->
        <Frame x:Name="childrenFrame" NavigationUIVisibility="Hidden" Grid.Row="1"/>
    </Grid>
</Page>
