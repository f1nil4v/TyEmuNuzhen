<Window x:Class="TyEmuNuzhen.Views.Windows.AddUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TyEmuNuzhen.Views.Windows"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="Добавление пользователя" Height="450" Width="800" Loaded="Window_Loaded">
    <Window.Resources>
        <Style TargetType="TextBox" BasedOn="{StaticResource MaterialDesignFloatingHintTextBox}">
            <Setter Property="materialDesign:TextFieldAssist.UnderlineBrush" Value="#A3B92E"/>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="materialDesign:TextFieldAssist.UnderlineBrush" Value="#A3B92E"/>
                    <Setter Property="materialDesign:HintAssist.Foreground" Value="#A3B92E"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="xctk:MaskedTextBox" BasedOn="{StaticResource MaterialDesignFloatingHintTextBox}">
            <Setter Property="materialDesign:TextFieldAssist.UnderlineBrush" Value="#A3B92E"/>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="materialDesign:TextFieldAssist.UnderlineBrush" Value="#A3B92E"/>
                    <Setter Property="materialDesign:HintAssist.Foreground" Value="#A3B92E"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="ComboBox" BasedOn="{StaticResource MaterialDesignFloatingHintComboBox}">
            <Setter Property="materialDesign:TextFieldAssist.UnderlineBrush" Value="#A3B92E"/>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="materialDesign:TextFieldAssist.UnderlineBrush" Value="#A3B92E"/>
                    <Setter Property="materialDesign:HintAssist.Foreground" Value="#A3B92E"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Margin="0,20,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBox
                   x:Name="tbLogin"
                   Margin="0,0,20,0" 
                   Grid.Column="0"
                   materialDesign:HintAssist.Hint="Логин"/>
                <TextBox
                   x:Name="tbPassword"
                   Margin="20,0,0,0" 
                   Grid.Column="1"
                   materialDesign:HintAssist.Hint="Пароль"/>
            </Grid>
        </StackPanel>
        <StackPanel Grid.Row="1" Margin="0,20,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBox
                   Margin="0,0,40,0"
                   Grid.Column="0"
                   x:Name="tbSurname"
                   materialDesign:HintAssist.Hint="Фамилия"/>
                <TextBox
                   Margin="20,0,20,0"
                   Grid.Column="1"
                   x:Name="tbName"
                   materialDesign:HintAssist.Hint="Имя"/>
                <TextBox
                   Margin="40,0,0,0"
                   Grid.Column="2"
                   x:Name="tbMiddleName"
                   materialDesign:HintAssist.Hint="Отчество"/>
            </Grid>
        </StackPanel>
        <StackPanel Grid.Row="2" Margin="0,20,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <xctk:MaskedTextBox 
                    Grid.Column="0"
                    Mask="+7 (000) 000-00-00" 
                    materialDesign:HintAssist.Hint="Телефон" 
                    x:Name="tbPhone"/>
                <TextBox
                   x:Name="tbEmail"
                   Margin="20,0,0,0" 
                   Grid.Column="1"
                   materialDesign:HintAssist.Hint="Email"/>
            </Grid>
        </StackPanel>

        <ComboBox x:Name="regionsCmbBox"
             Grid.Row="3"
             Margin="0,20,0,0"
             Width="200" 
             Visibility="Collapsed"
             materialDesign:HintAssist.Hint="Регион" 
             Cursor="Hand"/>
        <ComboBox x:Name="curatorRoleCmbBox"
             Grid.Row="3"
             Margin="0,20,0,0"
             Width="200" 
             Visibility="Collapsed"
             materialDesign:HintAssist.Hint="Роль" 
             Cursor="Hand"/>

        <StackPanel Grid.Row="4"
            Orientation="Horizontal" 
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom">
            <Button x:Name="btnCancel" 
                Content="Отмена" 
                IsCancel="True"
                Margin="0,0,10,0"  
                Height="30"
                Background="#A3B92E" 
                BorderBrush="#A3B92E" Click="btnCancel_Click"/>
            <Button x:Name="btnConfirm" 
                Content="Применить" 
                IsDefault="True"
                Height="30"
                Background="#A3B92E" 
                BorderBrush="#A3B92E" Click="btnConfirm_Click" />
        </StackPanel>
    </Grid>
</Window>
