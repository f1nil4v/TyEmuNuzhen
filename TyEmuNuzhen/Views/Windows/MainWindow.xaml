<Window xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"  
        x:Class="TyEmuNuzhen.Views.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TyEmuNuzhen.Views.Windows"
        mc:Ignorable="d"
        Title="Ты ему нужен" Height="650" Width="1000">

    <Window.Resources>
        <Storyboard x:Key="OpenMenu">
            <DoubleAnimation Storyboard.TargetProperty="Width" 
                             Storyboard.TargetName="menuPanel"
                             From="60" To="200" Duration="0:0:0.2"/>
        </Storyboard>
        <Storyboard x:Key="CloseMenu">
            <DoubleAnimation Storyboard.TargetProperty="Width" 
                             Storyboard.TargetName="menuPanel"
                             From="200" To="60" Duration="0:0:0.2"/>
        </Storyboard>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid x:Name="menuPanel" HorizontalAlignment="Left" Background="#FFCF5FD3" Grid.ColumnSpan="2" Width="60">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0">
                <Button x:Name="btnMenu" Height="60" Background="Transparent" BorderBrush="Transparent"
                    Click="BtnMenu_Click" HorizontalContentAlignment="Left">
                    <materialDesign:PackIcon Kind="Menu" Width="25" Height="25" Foreground="White"/>
                </Button>
            </StackPanel>
            <!--Меню волонтёра-->
            <StackPanel Grid.Row="1">
                <Button Height="50" Background="Transparent" BorderBrush="Transparent" HorizontalContentAlignment="Left">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Home" Width="25" Height="25" Foreground="White" VerticalAlignment="Center"/>
                        <TextBlock Text="Главная" Margin="10,0,0,0" VerticalAlignment="Center" Foreground="White">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Width, ElementName=menuPanel}" Value="60">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </StackPanel>
                </Button>
                
            </StackPanel>
            <!--Меню волонтёра-->
        </Grid>

        <!-- Основная область контента -->
        <Frame x:Name="MainFrame" Grid.Column="1" NavigationUIVisibility="Hidden"/>
    </Grid>

</Window>