<Window xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"  
        x:Class="TyEmuNuzhen.Views.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TyEmuNuzhen.Views.Windows"
        mc:Ignorable="d"
        Title="Ты ему нужен" MinHeight="650" MinWidth="1000" WindowState="Maximized" Closed="Window_Closed">

    <Window.Resources>
        <Storyboard x:Key="OpenMenu">
            <DoubleAnimation Storyboard.TargetProperty="Width" 
                             Storyboard.TargetName="menuPanel"
                             From="60" To="200" Duration="0:0:0.2"/>
        </Storyboard>
        <Storyboard x:Key="CloseMenu">
            <DoubleAnimation Storyboard.TargetProperty="Width" 
                             Storyboard.TargetName="menuPanel"
                             From="200" To="60" Duration="0:0:0.2"/>
        </Storyboard>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid x:Name="menuPanel" HorizontalAlignment="Left" Background="#FFCF5FD3" Grid.ColumnSpan="2" Width="60" Panel.ZIndex="1" >
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0">
                <StackPanel Grid.Row="1">
                    <Button x:Name="btnMenu" Height="50" Background="Transparent" BorderBrush="Transparent" HorizontalContentAlignment="Left" Click="BtnMenu_Click">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Menu" Width="25" Height="25" Foreground="White"/>
                            <TextBlock Text="Меню" Margin="10,0,0,0" VerticalAlignment="Center" Foreground="White">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Width, ElementName=menuPanel}" Value="60">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </StackPanel>
            <!--Меню волонтёра-->
            <StackPanel x:Name="volonteerMenu"  Grid.Row="1">
                <Button Height="50" Background="Transparent" BorderBrush="Transparent" HorizontalContentAlignment="Left">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Images/Controls/monitoring.png" Height="25"></Image>
                        <TextBlock Text="Мониторинг" Margin="10,0,0,0" VerticalAlignment="Center" Foreground="White">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Width, ElementName=menuPanel}" Value="60">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </StackPanel>
                </Button>
            </StackPanel>

            <StackPanel Grid.Row="2" VerticalAlignment="Bottom">
                <Button Height="50" Background="Transparent" BorderBrush="Transparent" HorizontalContentAlignment="Left">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Images/Controls/profile.png" Height="25"></Image>
                        <TextBlock Text="Профиль" Margin="10,0,0,0" VerticalAlignment="Center" Foreground="White">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Width, ElementName=menuPanel}" Value="60">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </StackPanel>
                </Button>
                <Button x:Name="exitBtn" Height="50" Background="Transparent" BorderBrush="Transparent" HorizontalContentAlignment="Left" Click="exitBtn_Click">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Images/Controls/exit.png" Height="25"></Image>
                        <TextBlock Text="Выход" Margin="10,0,0,0" VerticalAlignment="Center" Foreground="White">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Width, ElementName=menuPanel}" Value="60">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </StackPanel>
                </Button>

            </StackPanel>
            <!--Меню волонтёра-->
        </Grid>

        <!-- Основная область контента -->
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" Grid.ColumnSpan="2" Margin="60,0,0,0"/>
    </Grid>

</Window>