<Window x:Class="TyEmuNuzhen.Views.Windows.DiagnosisWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TyEmuNuzhen.Views.Windows"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Выберите диагноз" 
               FontSize="16" 
               FontWeight="SemiBold" 
               Margin="0,0,0,15"/>

        <ComboBox Grid.Row="1" 
              x:Name="cbDiagnoses" 
              materialDesign:HintAssist.Hint="Тип документа" 
              IsEditable="False"
              DisplayMemberPath="documentType"
              SelectedValuePath="ID"
              Margin="0,0,0,20"/>

        <StackPanel Grid.Row="2" 
                Orientation="Horizontal" 
                HorizontalAlignment="Right">
            <Button x:Name="btnCancel" 
                Content="Отмена" 
                IsCancel="True"
                Margin="0,0,10,0"  
                Height="30"
                Background="#A3B92E" 
                BorderBrush="#A3B92E" 
                Click="btnCancel_Click"/>
            <Button x:Name="btnSelect" 
                Content="Выбрать" 
                IsDefault="True"
                Height="30"
                Background="#A3B92E" 
                BorderBrush="#A3B92E" 
                Click="btnSelect_Click"/>
        </StackPanel>
    </Grid>
</Window>
