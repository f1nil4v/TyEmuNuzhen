<UserControl x:Class="TyEmuNuzhen.Views.UserControls.HospitalizationMedicalDirectionUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TyEmuNuzhen.Views.UserControls"
             mc:Ignorable="d" >
    <Border x:Name="photoBorder" BorderBrush="#FFCF5FD3" BorderThickness="1" CornerRadius="10" Margin="5" Padding="5" Cursor="Hand" MouseLeftButtonDown="photoBorder_MouseLeftButtonDown">
        <StackPanel Width="150">
            <Border Width="140" Height="140" CornerRadius="8" Margin="0,0,0,5">
                <Border.Background>
                    <ImageBrush x:Name="photoImage" Stretch="UniformToFill"/>
                </Border.Background>
            </Border>
            <TextBlock x:Name="infoTextBlock" Text="Документ" TextWrapping="Wrap" TextAlignment="Center" HorizontalAlignment="Center" Foreground="#A101A6" FontSize="12"/>
        </StackPanel>
    </Border>
</UserControl>
