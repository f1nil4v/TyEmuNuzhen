<UserControl x:Class="TyEmuNuzhen.Views.UserControls.DescriptionUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TyEmuNuzhen.Views.UserControls"
             mc:Ignorable="d" >
    <Border Margin="0,5" BorderBrush="#FFCF5FD3" BorderThickness="0,0,0,1" Padding="0,0,0,5">
        <StackPanel>
            <TextBlock x:Name="dateTextBlock" Text="Дата" FontSize="12" Foreground="#A101A6" Margin="0,0,0,5"/>
            <TextBlock x:Name="descriptionTextBlock" Text="Примечание" TextWrapping="Wrap"/>
        </StackPanel>
    </Border>
</UserControl>
