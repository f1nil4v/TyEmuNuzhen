<UserControl x:Class="TyEmuNuzhen.Views.UserControls.ConsultationDiagnosisUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TyEmuNuzhen.Views.UserControls"
             mc:Ignorable="d">
    <Border Margin="0,5" BorderBrush="#FFCF5FD3" BorderThickness="0,0,0,1" Padding="0,0,0,5">
        <StackPanel>
            <Button x:Name="btnDelete"
                    Background="#A3B92E" 
                    BorderBrush="#A3B92E"
                    Height="20"
                    Padding="2"
                    HorizontalAlignment="Right" Click="btnDelete_Click">
                <Image Source="/Images/Controls/trash.png"/>
            </Button>
            <TextBlock x:Name="descriptionTextBlock" Text="Диагноз" TextWrapping="Wrap"/>
        </StackPanel>
    </Border>
</UserControl>
