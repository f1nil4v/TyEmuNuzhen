<UserControl x:Class="TyEmuNuzhen.Views.UserControls.ChildrensUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TyEmuNuzhen.Views.UserControls"
             mc:Ignorable="d" 
             Height="220" MinWidth="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Margin="10,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Center" Width="200" Height="200">
            <Grid>
                <Rectangle Width="200" Height="200" RadiusX="10" RadiusY="10">
                    <Rectangle.Fill>
                        <ImageBrush x:Name="childPhoto" Stretch="UniformToFill"/>
                    </Rectangle.Fill>
                </Rectangle>

                <Rectangle Width="200" Height="200" RadiusX="10" RadiusY="10" Stroke="#A101A6" StrokeThickness="2" Fill="Transparent"/>
            </Grid>
        </Border>

        <StackPanel Grid.Column="1" Margin="10,10,0,0">
            <TextBlock x:Name="questNumberTextBlock" FontSize="14" Text="Номер анкеты: " />
            <TextBlock x:Name="fullNameTextBlock" Margin="0,10,0,0" FontSize="14" Text="Фамилия Имя" />
            <TextBlock x:Name="birthdayTextBlock" Margin="0,10,0,0" FontSize="14" Text="Дата раждения: " />
            <TextBlock x:Name="ageTextBlock" Margin="0,10,0,0" FontSize="14" Text="Возраст: " />
            <TextBlock x:Name="descriptionTextBlock" Margin="0,10,0,0" FontSize="14" Text="Последнее примечание " HorizontalAlignment="Stretch" TextWrapping="Wrap"/>
        </StackPanel>
        <Button x:Name="questURLBtn" Grid.Column="2" BorderThickness="0" Height="20" Content="Отктыть анкету" FontSize="12" HorizontalAlignment="Right" VerticalAlignment="Top" Background="#A3B92E" Foreground="#DDFFFFFF" Margin="0,10,10,0" Padding="16,0,16,0" Click="questURLBtn_Click" />
        <TextBlock x:Name="dateAddedTextBlock" Grid.Column="2" FontSize="12" Text="Дата добавления в базу: " HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,10,10"/>
    </Grid>
</UserControl>
